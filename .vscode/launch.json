{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
			],
			"outFiles": [
				"${workspaceFolder}/packages/extension/out/extension/**/*.js",
				"${workspaceFolder}/packages/extension/out/extension/*.js"
			],
			"preLaunchTask": "watch-extension"
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/extension",
				"--extensionTestsPath=${workspaceFolder}/packages/extension/out/extension/__test__/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/packages/extension/out/test/extension/**/*.js"
			],
			"preLaunchTask": "watch-extension"
		}
	]
}
