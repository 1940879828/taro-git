{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch-extension",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "-F", "extension", "watch:extension"],
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"panel": "dedicated"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
