{
  "name": "vscode-taro-git",
  "displayName": "extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-taro-git.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidebar-view",
          "title": "提交",
          "icon": "assets/commit.svg"
        }
      ],
      "panel": [
        {
          "id": "panel-view",
          "title": "版本管理",
          "icon": "assets/commit.svg"
        }
      ]
    },
    "views": {
      "sidebar-view": [
        {
          "id": "sidebar-view-container",
          "type": "webview",
          "name": "提交",
          "icon": "assets/commit.svg"
        }
      ],
      "panel-view": [
        {
          "id": "panel-view-container",
          "type": "webview",
          "name": "panel view",
          "icon": "assets/commit.svg",
          "contextualTitle": "GitPanel",
          "initialSize": 4,
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build-rollup",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "pnpm run clear:out && tsc -watch -p ./",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "clear": "rimraf ./out && rimraf ./node_modules",
    "clear:out": "rimraf ./out/extension",
    "build-rollup": "pnpm run clear:out && rollup -c"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "glob": "^11.0.3",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.50.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@jsonrpc-rx/server": "^0.2.1",
    "html-modifier": "^1.2.0"
  }
}